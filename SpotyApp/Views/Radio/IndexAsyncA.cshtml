@model SpotyApp.ViewModels.RadioVM
@{
    ViewData["Title"] = "Synchronous Methods";
}

<h2>Test Asynchronous Methods A - Sync behaviour</h2>

<div class="row">
    <div class="alert alert-danger" role="alert">
        Delay : @ViewBag.Delay ms
    </div>
</div>
<div class="row">
    <div class="alert alert-warning" role="alert">
        Current Number of listeners : @Model.CurrentNumberOfListeners
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="panel panel-success">
            <div class="panel-heading">Top Albums</div>
            <ul class="list-group">
                @foreach (var album in Model.Albums)
                {
                    <li class="list-group-item">@album</li>
                }
            </ul>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">Top Artists</div>
            <ul class="list-group">
                @foreach (var artist in Model.Artists)
                {
                    <li class="list-group-item">@artist</li>
                }
            </ul>
        </div>
    </div>
</div>